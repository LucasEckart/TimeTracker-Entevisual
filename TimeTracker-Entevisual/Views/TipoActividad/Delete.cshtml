@model TimeTracker_Entevisual.Models.TipoActividad

@{
    ViewData["Title"] = "Eliminar tipo de actividad";
}

<div class="mt-4">
    <div class="tt-card p-4 hover-lift">
        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h3 class="mb-1">Eliminar tipo de actividad</h3>
                <div class="tt-text-2">Esta acción no se puede deshacer.</div>
            </div>

            <a class="btn btn-soft" asp-action="Index">
                <i class="bi bi-arrow-left me-1"></i> Volver
            </a>
        </div>

        <div class="tt-hr"></div>

        @{
            var enUso = (bool)(ViewBag.EnUso ?? false);
            var cant = (int)(ViewBag.CantidadActividades ?? 0);
        }
        @if (enUso)
        {
            <div class="alert alert-warning mb-3">
                <div class="d-flex align-items-start gap-2">
                    <i class="bi bi-exclamation-triangle"></i>
                    <div>
                        <div class="fw-semibold">No se puede eliminar</div>
                        <div class="tt-text-2 small">
                            Este tipo está siendo usado por <b>@cant</b> actividad(es).
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info mb-3">
                <div class="d-flex align-items-start gap-2">
                    <i class="bi bi-exclamation-triangle"></i>
                    <div>
                        <div class="fw-semibold">Confirmación</div>
                        <div class="tt-text-2 small">Esta acción no se puede deshacer.</div>
                    </div>
                </div>
            </div>
        }


        <div class="row g-3">


            <div class="col-md-9">
                <div class="tt-text-2 small">Descripción</div>
                <div class="fw-semibold">@Model.Descripcion</div>
            </div>
        </div>

        <div class="tt-hr"></div>

        <form asp-action="Delete" method="post" class="d-flex justify-content-end gap-2">
            <input type="hidden" asp-for="Id" />

            <a class="btn btn-outline-light border-opacity-25" asp-action="Index">
                Cancelar
            </a>
            <button type="submit" class="btn btn-danger" @(enUso ? "disabled" : "")>
                <i class="bi bi-trash me-1"></i> Eliminar
            </button>

        </form>
    </div>
</div>
