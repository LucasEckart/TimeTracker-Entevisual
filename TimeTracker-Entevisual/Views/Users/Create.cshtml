@model TimeTracker_Entevisual.Models.ViewModels.UsuarioCreateVM
@{
    ViewData["Title"] = "Nuevo usuario";
}

<div class="tt-shell mt-4">
    <div class="tt-card p-4 p-lg-5">
        <h3 class="mb-1">Nuevo usuario</h3>
        <div class="tt-text-2 mb-4">Se generará una contraseña temporal y se forzará cambio al primer login.</div>

        <form method="post">
            @Html.AntiForgeryToken()
            <div class="text-danger small mb-2" asp-validation-summary="ModelOnly"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label tt-text-2">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label tt-text-2">Apellido</label>
                    <input asp-for="Apellido" class="form-control" />
                    <span asp-validation-for="Apellido" class="text-danger small"></span>
                </div>
                <div class="col-12">
                    <label class="form-label tt-text-2">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
            </div>
            <div class="col-12">
                <label class="form-label tt-text-2">Rol</label>
                <select asp-for="Rol" asp-items="Model.RolesDisponibles" class="form-select"></select>
                <span asp-validation-for="Rol" class="text-danger small"></span>

                @if (User.IsInRole("Moderador") && !User.IsInRole("Admin"))
                {
                    <div class="tt-text-2 small mt-1 opacity-75">
                    </div>
                }
            </div>


            <div class="d-flex gap-2 mt-4">
                <a asp-action="Index" class="btn btn-outline-light border-opacity-25">Cancelar</a>
                <button class="btn btn-primary">
                    <i class="bi bi-check2 me-1"></i> Crear usuario
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
