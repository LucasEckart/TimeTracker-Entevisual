@model TimeTracker_Entevisual.Models.ViewModels.UsuarioEditVM
@{
    ViewData["Title"] = "Editar usuario";
}

<div class="tt-shell mt-4">
    <div class="tt-card p-4 p-lg-5">
        <h3 class="mb-1">Editar usuario</h3>
        <div class="tt-text-2 mb-4">Podés activar/inactivar el usuario.</div>

        <form method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="text-danger small mb-2" asp-validation-summary="ModelOnly"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label tt-text-2">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label tt-text-2">Apellido</label>
                    <input asp-for="Apellido" class="form-control" />
                    <span asp-validation-for="Apellido" class="text-danger small"></span>
                </div>
                <div class="col-12">
                    <label class="form-label tt-text-2">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="col-12">
                    <div class="form-check">
                        <input asp-for="Activo" class="form-check-input" />
                        <label class="form-check-label tt-text-2">Usuario activo</label>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2 mt-4">
                <a asp-action="Index" class="btn btn-outline-light border-opacity-25">Volver</a>
                <button class="btn btn-primary">
                    <i class="bi bi-check2 me-1"></i> Guardar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
