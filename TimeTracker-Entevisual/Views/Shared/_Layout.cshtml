<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TimeTracker_Entevisual</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TimeTracker_Entevisual.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>
<body>
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        <header class="tt-navbar">
            <nav class="navbar navbar-expand-lg tt-navbar w-100 px-3 px-lg-4">
                <div class="container-fluid">

                    <!-- Brand -->
                    <a class="navbar-brand d-flex align-items-center"
                       asp-controller="Home"
                       asp-action="Index">
                        <img src="~/img/logo1.png"
                             alt="TimEV"
                             class="tt-navbar-logo" />
                    </a>


                    <button class="navbar-toggler"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#mainNav"
                            aria-controls="mainNav"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="mainNav">
                        <!-- IZQUIERDA -->
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door me-1"></i> Inicio
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Archivo" asp-action="Index">
                                    <i class="bi bi-archive me-1"></i> Archivo
                                </a>
                            </li>

                            @* SOLO Admin: vistas globales *@
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="bi bi-globe me-1"></i> Dashboard global
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Archivo">
                                        <i class="bi bi-globe me-1"></i> Archivo global
                                    </a>
                                </li>
                            }

                            @* Admin y Moderador: mantenedores *@
                            @if (User.IsInRole("Admin") || User.IsInRole("Moderador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="TipoActividad" asp-action="Index">
                                        <i class="bi bi-tags me-1"></i> Tipos de actividad
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Users" asp-action="Index">
                                        <i class="bi bi-person-badge me-1"></i> Usuarios
                                    </a>
                                </li>
                            }

                        </ul>


                        <!-- DERECHA -->
                        <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-2">

                            <li class="nav-item">
                                <span class="navbar-text text-white-50">
                                    <i class="bi bi-person-circle me-1"></i>
                                    @User.Identity?.Name
                                </span>
                            </li>

                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-light border-opacity-25 btn-sm">
                                        <i class="bi bi-box-arrow-right me-1"></i> Salir
                                    </button>
                                </form>
                            </li>
                        </ul>

                    </div>
                </div>
            </nav>
        </header>
    }



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

@*     <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - TimeTracker_Entevisual - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
