@model TimeTracker_Entevisual.Models.ViewModels.ChangePasswordObligatorioVM
@{
    ViewData["Title"] = "Cambiar contraseña";
}

<div class="tt-shell mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-7 col-lg-6">
            <div class="tt-card p-4 p-lg-5">
                <h3 class="mb-1">Cambiar contraseña</h3>
                <div class="tt-text-2 mb-4">
                    Es tu primer ingreso. Tenés que definir una contraseña nueva para continuar.
                </div>

                <form method="post">
                    @Html.AntiForgeryToken()
                    <div class="text-danger small mb-2" asp-validation-summary="ModelOnly"></div>

                    <div class="mb-3">
                        <label class="form-label tt-text-2">Contraseña actual</label>
                        <input asp-for="PasswordActual" class="form-control" autocomplete="current-password" />
                        <span asp-validation-for="PasswordActual" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label tt-text-2">Nueva contraseña</label>
                        <input asp-for="NuevaPassword" class="form-control" autocomplete="new-password" />
                        <span asp-validation-for="NuevaPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label tt-text-2">Confirmar nueva contraseña</label>
                        <input asp-for="ConfirmarNuevaPassword" class="form-control" autocomplete="new-password" />
                        <span asp-validation-for="ConfirmarNuevaPassword" class="text-danger small"></span>
                    </div>

                    <button class="btn btn-primary w-100">
                        <i class="bi bi-check2 me-1"></i> Guardar y continuar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
